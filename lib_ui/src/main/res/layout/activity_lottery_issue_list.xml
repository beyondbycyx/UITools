<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_list_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:drawSelectorOnTop="true"
        ptr:ptrHeaderSubTextColor="@color/text_color_2"
        ptr:ptrHeaderTextColor="@color/text_color_2" />

    <LinearLayout
        android:id="@+id/ll_betting_container"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/bottom_color"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_touzhu"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_btn1"
            android:text="投注"
            android:textColor="@color/btn_text_color1" />
    </LinearLayout>

</LinearLayout>