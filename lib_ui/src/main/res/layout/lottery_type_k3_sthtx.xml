<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/lottery_type_head" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <include layout="@layout/ball_tip_label" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_sthtx"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@drawable/selector_rect_ball_bg"
                android:padding="5dp"
                android:text="三同号通选"
                android:textColor="@color/k3_ball_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sthtx_yilou"
                style="@style/text_style_white_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="--" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>