<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/panel_bg"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="选择银行" />

                <TextView
                    android:id="@+id/tv_bank_name"
                    style="@style/text_style_color1_16"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="4dp"
                    android:gravity="center_vertical"
                    android:hint="请选择银行"
                    android:maxLength="50" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="开户省份" />

                <TextView
                    android:id="@+id/tv_open_province"
                    style="@style/text_style_color1_16"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="4dp"
                    android:gravity="center_vertical"
                    android:hint="请选择省份"
                    android:maxLength="50" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="开户城市" />

                <TextView
                    android:id="@+id/tv_open_city"
                    style="@style/text_style_color1_16"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="4dp"
                    android:gravity="center_vertical"
                    android:hint="请选择城市"
                    android:maxLength="50" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="开户支行" />

                <EditText
                    android:id="@+id/et_open_bank"
                    style="@style/text_style_color1_16"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="4dp"
                    android:background="@color/white"
                    android:hint="请输入银行卡开户支行"
                    android:inputType="text"
                    android:maxLength="50" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="银行卡号" />

                <EditText
                    android:id="@+id/et_bank_card_no"
                    style="@style/text_style_color1_16"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="4dp"
                    android:background="@color/white"
                    android:hint="请输入银行卡号"
                    android:inputType="number"
                    android:maxLength="24" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="身份证号" />

                <EditText
                    android:id="@+id/et_id_card_no"
                    style="@style/text_style_color1_16"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="4dp"
                    android:background="@color/white"
                    android:hint="请输入身份证号码"
                    android:inputType="text"
                    android:maxLength="18" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_btn1"
            android:text="确认添加"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>