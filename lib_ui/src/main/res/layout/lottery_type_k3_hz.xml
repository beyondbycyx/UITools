<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bpv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/lottery_type_head" />

    <com.lian.lottery.views.BallPanelView2
        android:id="@+id/bpv_hz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        bpv:ballCount="16"
        bpv:ballWidth="76dp"
        bpv:isShowBallLabel="true"
        bpv:startNumber="3"
        bpv:withOmit="true" 
        bpv:omitTextColor="@color/white"
        bpv:omitMaxTextColor="@color/red"/>

    <TextView
        style="@style/text_style_white_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="快速选号" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/tv_da"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_left_bg"
            android:gravity="center"
            android:text="大"
            android:textColor="@color/k3_ball_text_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/ksxh_v_line" />

        <TextView
            android:id="@+id/tv_xiao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_center_bg"
            android:gravity="center"
            android:text="小"
            android:textColor="@color/k3_ball_text_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/ksxh_v_line"/>

        <TextView
            android:id="@+id/tv_dan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_center_bg"
            android:gravity="center"
            android:text="单"
            android:textColor="@color/k3_ball_text_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:background="@drawable/ksxh_v_line" />

        <TextView
            android:id="@+id/tv_shuang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_right_bg"
            android:gravity="center"
            android:text="双"
            android:textColor="@color/k3_ball_text_color"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>