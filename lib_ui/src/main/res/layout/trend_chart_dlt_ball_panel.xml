<ViewAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tcbpv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/va_ball_panel_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.lian.lottery.trendchart.view.TrendChartHorizontalScrollView
        android:id="@+id/hsv_red_ball_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <com.lian.lottery.trendchart.view.TrendChartBallPanelView
            android:id="@+id/tbpv_ball_view_red"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            tcbpv:ballCount="35"
            tcbpv:isFixedWidth="false"
            tcbpv:startNumber="1" >
        </com.lian.lottery.trendchart.view.TrendChartBallPanelView>
    </com.lian.lottery.trendchart.view.TrendChartHorizontalScrollView>

    <com.lian.lottery.trendchart.view.TrendChartHorizontalScrollView
        android:id="@+id/hsv_blue_ball_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <com.lian.lottery.trendchart.view.TrendChartBallPanelView
            android:id="@+id/tbpv_ball_view_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tcbpv:ballBackground="@drawable/selector_btn_ball_blue"
            tcbpv:ballCount="12"
            tcbpv:ballPopBackground="@drawable/ball_blue_clicked"
            tcbpv:ballTextColor="@color/blue_ball_text_color"
            tcbpv:isFixedWidth="false"
            tcbpv:startNumber="1" >
        </com.lian.lottery.trendchart.view.TrendChartBallPanelView>
    </com.lian.lottery.trendchart.view.TrendChartHorizontalScrollView>

</ViewAnimator>