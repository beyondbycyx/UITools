<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/ll_root_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="8dp" >

                        <ImageView
                            android:id="@+id/iv_lottery_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />

                        <TextView
                            android:id="@+id/tv_lottery_name"
                            style="@style/text_style_color1_16"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_lottery_issue"
                            style="@style/text_style_color1_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="@color/line_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp" >

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="end"
                                android:orientation="vertical" >

                                <TextView
                                    style="@style/text_style_color2_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="总金额" />

                                <TextView
                                    android:id="@+id/tv_totel_money"
                                    style="@style/text_style_red_blod_16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="0.8dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:background="@color/line_color" />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="end"
                                android:orientation="vertical" >

                                <TextView
                                    style="@style/text_style_color2_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="最低认购" />

                                <TextView
                                    android:id="@+id/tv_single_part"
                                    style="@style/text_style_red_blod_16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="0.8dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:background="@color/line_color" />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="end"
                                android:orientation="vertical" >

                                <TextView
                                    style="@style/text_style_color2_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="剩余" />

                                <TextView
                                    android:id="@+id/tv_left"
                                    style="@style/text_style_red_blod_16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dp" >

                    <com.lian.lottery.views.HemaiProgressView
                        android:id="@+id/hpv_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_decorate" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="发起人" />

                <TextView
                    android:id="@+id/tv_creator"
                    style="@style/text_style_color2_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/ll_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/tv_custom_documentary"
                    style="@style/text_style_color1_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/selector_btn7"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="定制跟单"
                    android:visibility="gone"
                    android:textColor="@color/cancel_order_btn_text_color"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="订单号" />

                <TextView
                    android:id="@+id/tv_order_no"
                    style="@style/text_style_color2_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="发起时间" />

                <TextView
                    android:id="@+id/tv_build_time"
                    style="@style/text_style_color2_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_stop_case_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="停止条件" />

                <TextView
                    android:id="@+id/tv_stop_case"
                    style="@style/text_style_color2_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 中奖纪录 gone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="2dp"
                android:visibility="gone" >

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="中奖记录" />

                <TextView
                    android:id="@+id/tv_win_prize_money"
                    style="@style/text_style_color2_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="佣金" />

                <TextView
                    android:id="@+id/tv_commissioni"
                    style="@style/text_style_color2_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_parts_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="我的认购" />

                <TextView
                    android:id="@+id/tv_my_parts"
                    style="@style/text_style_color1_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_issues_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dip"
                    android:layout_weight="0"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="7dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="7dp" >

                    <TextView
                        style="@style/text_style_color1_16"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="方案详情" />

                    <TextView
                        android:id="@+id/tv_content_title_label"
                        style="@style/text_style_color2_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_more1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_ic_down" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dip"
                    android:layout_marginLeft="18dp"
                    android:background="@color/line_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_issumes_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_content_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="7dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="7dp" >

                    <TextView
                        style="@style/text_style_color1_16"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="选号详情" />

                    <TextView
                        android:id="@+id/tv_secret_type"
                        style="@style/text_style_color2_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_ic_down" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dip"
                    android:layout_marginLeft="18dp"
                    android:background="@color/line_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_group_buy_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="7dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="7dp" >

                    <TextView
                        style="@style/text_style_color1_16"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="参与用户" />

                    <TextView
                        android:id="@+id/tv_group_buy_label"
                        style="@style/text_style_color2_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_more2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_ic_down" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dip"
                    android:background="@color/line_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_group_buy_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="方案标题" />

                <TextView
                    android:id="@+id/tv_hemai_title"
                    style="@style/text_style_color2_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <TextView
                    style="@style/text_style_color1_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="方案描述" />

                <TextView
                    android:id="@+id/tv_desc"
                    style="@style/text_style_color2_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.8dip"
        android:layout_weight="0"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="7dp" >

            <TextView
                style="@style/text_style_color1_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/btn_reduce"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_btn_hemai_reduce" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_buy_money"
                    style="@style/text_style_color1_14"
                    android:layout_width="40sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_bg"
                    android:gravity="center"
                    android:hint="1"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColorHint="@color/text_color_1" />

                <LinearLayout
                    android:id="@+id/btn_add"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_btn_hemai_add" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/text_style_color1_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="10dp" >

            <TextView
                android:id="@+id/tv_left2"
                style="@style/text_style_color1_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/bottom_color"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <Button
            android:id="@+id/btn_bay_left"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/selector_btn2"
            android:text="土豪全包"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_buy_label"
            style="@style/text_style_white_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_commit"
            android:textSize="16sp"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn1"
            android:text="确定"
            android:textColor="@color/btn_text_color1" />
    </RelativeLayout>

</LinearLayout>