<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_bg"
    android:orientation="horizontal" >
     
    <LinearLayout 
        android:id="@+id/ll_share_platform_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/iv_share_platform_icon"
            android:src="@drawable/ic_weixin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            android:scaleType="fitCenter"/>
        
        <TextView 
            style="@style/text_style_color1_16"
            android:id="@+id/tv_share_platform_descreption"
            android:text="新浪微博"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/person_center_item_text_color"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    
</LinearLayout>
