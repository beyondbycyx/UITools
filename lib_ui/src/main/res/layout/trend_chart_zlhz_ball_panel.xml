<com.lian.lottery.trendchart.view.TrendChartHorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tcbpv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hsv_ball_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.lian.lottery.trendchart.view.TrendChartBallPanelView
            android:id="@+id/tbpv_ball_view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            tcbpv:ballCount="22"
            tcbpv:isFixedWidth="false"
            tcbpv:startNumber="3" >
        </com.lian.lottery.trendchart.view.TrendChartBallPanelView>
    </LinearLayout>

</com.lian.lottery.trendchart.view.TrendChartHorizontalScrollView>