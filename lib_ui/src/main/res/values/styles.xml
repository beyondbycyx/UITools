    </style>

    <style name="text_style_color1_18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_1</item>
    </style>

    <style name="text_style_color1_20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color_1</item>
    </style>

    <!-- color 2 灰色 -->
    <style name="text_style_color2_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_2</item>
    </style>

    <style name="text_style_color2_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_2</item>
    </style>

    <style name="text_style_color2_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_2</item>
    </style>

    <style name="text_style_color2_18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_2</item>
    </style>

    <!-- 白色字体 -->
    <style name="text_style_white_10">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="text_style_white_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_style_white_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_style_white_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_style_white_18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 红色 字体-->
    <style name="text_style_red_blod_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_6</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- 弹出框的窗口动画 -->
    <style name="top_dialog_anim">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_top</item>
    </style>

    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="betting_line_style">
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">20dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

</resources>